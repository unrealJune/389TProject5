name: Update
on: push
 branches:
      - 'main'

jobs:
  deploy:
    name: Update
    runs-on: ubuntu-latest
    steps:
      - name: Clone Repo
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.HOST }} 
          username: ${{ secrets.USERNAME }}
          password: ${{ secrets.PASSWORD }}
          port: ${{ secrets.PORT }}
          script: |
              cd /pub/jphilip/
              cd  389TProject5
              git pull
              
